{
  "name": "gwtree",
  "version": "1.1.2",
  "description": "Git worktree manager for parallel development",
  "type": "module",
  "module": "src/index.ts",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "test": "bun test --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "parallel",
    "development",
    "coding-agents",
    "command",
    "claude",
    "cursor",
    "workflow"
  ],
  "author": "Ryan Dsouza",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryands17/gwtree.git"
  },
  "bugs": {
    "url": "https://github.com/ryands17/gwtree/issues"
  },
  "homepage": "https://github.com/ahmadawais/gwtree#readme",
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.6.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cosmiconfig": "9.0.0",
    "zod": "4.1.13"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write"
  },
  "gwtree": {
    "defaultBaseBranch": "main",
    "hooks": {
      "onCreate": {
        "copyFiles": [
          {
            "src": "node_modules",
            "dst": "."
          }
        ],
        "runCommands": [
          "bun install"
        ]
      }
    }
  }
}
